 .rec {
  -webkit-transition: all .25s ease-in-out;
  -moz-transition: all .25s ease-in-out;
  transition: all .25s ease-in-out;
}
.rec small a {
  color: #424242;
  text-decoration: none;
}
.rec.invers,
.rec.invers small a {
  color: #e1e3e4;
}
.rec.invers small a:hover {
  color: #fff;
}
